<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_250sdp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="-10dp"
        android:background="@mipmap/exit_dialog_bg" />

    <ImageView
        android:id="@+id/cancelBtn_exit"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/emojiIv"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"
        android:layout_below="@id/cancelBtn_exit"
        android:layout_centerHorizontal="true"
        android:src="@drawable/medium_difficulty_emoji" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure to exit game?"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        android:layout_below="@id/emojiIv"
        android:layout_above="@id/ok_exitBtn"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />


    <ImageButton
        android:id="@+id/ok_exitBtn"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@mipmap/dificulty_ok"

        />




</RelativeLayout>
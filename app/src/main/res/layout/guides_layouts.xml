<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#EDF3F3"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_guides"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:elevation="@dimen/_10sdp"
        android:background="@color/purple_700"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Play Guides"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/hideEmailLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_arrow_back" />
    </RelativeLayout>


    <ScrollView
        android:layout_below="@id/title_guides"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_below="@id/title_guides"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basic Rules"
                android:padding="@dimen/_10sdp"
                android:background="@color/purple_700"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:justificationMode="inter_word"
                android:textSize="@dimen/_13sdp"
                android:text="@string/basic_rules_text"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/grids_info"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Original Mode"
            android:padding="@dimen/_10sdp"
            android:background="@color/purple_700"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:justificationMode="inter_word"
            android:textSize="@dimen/_13sdp"
            android:text="Easy to play, just following basic rules only."
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blockage Mode"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:background="@color/purple_700"
            android:gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:justificationMode="inter_word"
            android:textSize="@dimen/_13sdp"
            android:text="In this mode, few blocks are already locked on start of the game, so no player can place their X/O in it until it disappears. How boxes are locked &amp; after how much clicks each locked box is unlocked varies according to different grids which are given below:"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_13sdp"
            android:gravity="center"
            android:text="1) In 3x Grid 3 Boxes will be locked that will be unlocked each after 2 Clicks\n2) In 6x Grid 5 Boxes will be locked that will be unlocked each after 4 Clicks\n3) In 9x Grid 10 Boxes will be locked that will be unlocked each after 5 Clicks\n4) In 11x Grid 15 Boxes will be locked that will be unlocked each after 6 Clicks"
            android:textColor="@color/black"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Barrier Mode"
                android:padding="@dimen/_10sdp"
                android:background="@color/purple_700"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:padding="@dimen/_10sdp"
                android:text="In this mode, no box will be already locked. Boxes will be locked randomly as increase in occupied boxes by players. Locking boxes will also varies according to various Grids which are given below:"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"
                android:text="@string/barrier_box_gird_info"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fade Away Mode"
                android:padding="@dimen/_10sdp"
                android:background="@color/purple_700"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:padding="@dimen/_10sdp"
                android:text="In this mode, Each box clicked by you &amp; opponent will disappears in sequence they are clicked after each 3 clicks."
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickage Mode"
                android:padding="@dimen/_10sdp"
                android:background="@color/purple_700"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:padding="@dimen/_10sdp"
                android:text="In this mode, User can only use their limited X/O, but they can readjust them until game ends. For example: in 3x3 Grid player 1 can only use 3 X after that, he will only be able to switch them"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>
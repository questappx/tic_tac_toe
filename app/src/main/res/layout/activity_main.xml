<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainGameLayout"
    android:background="@drawable/bg"
    tools:context=".MainActivity"
    >

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        >

        <ImageView
            android:id="@+id/acitivtybackIv"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/activity_back_btn" />

        <ImageView
            android:id="@+id/screenShotIv"
            android:layout_width="@dimen/_50sdp"
            android:visibility="gone"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toLeftOf="@id/settingIv"
            android:src="@drawable/setting_img" />

        <ImageView
            android:id="@+id/settingIv"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/setting_img" />



    </RelativeLayout>


    <LinearLayout
        android:id="@+id/playersTurnLayout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_marginBottom="-10dp"
        android:layout_height="@dimen/_70sdp"
        android:layout_above="@id/containerLayout"
        android:layout_below="@id/toolbar"
        android:gravity="center"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/playerOneIv"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="bottom|left"
            android:scaleType="fitStart"
            android:src="@drawable/player_one_glow" />

        <TextView
            android:id="@+id/playerone_clicks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="-20dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/lato_bold"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text=":"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/playertwo_clicks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="-20dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/lato_bold"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <ImageView
            android:id="@+id/playerTwoIv"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="right|bottom"
            android:scaleType="fitEnd"
            android:src="@drawable/player_two_dim" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/playersTurnLayoutLevel"
        android:layout_width="match_parent"

        android:layout_height="@dimen/_70sdp"
        android:layout_above="@id/containerLayout"
        android:layout_below="@id/toolbar"
        android:gravity="center"
        android:orientation="horizontal"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left">

            <ImageView
                android:id="@+id/playerOneLevelIv"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:scaleType="fitXY"
                android:src="@drawable/playerone_level_glowlayout"
                app:tint="@color/red" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/x" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:text="Player"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="bottom"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="VS"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_17sdp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level No. "
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/levelNoTv"
                    android:textColor="@color/white"
                    />
            </LinearLayout>



        </LinearLayout>




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/o" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:text="Player"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/playerTwoLevelIv"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:alpha="0.5"
                android:scaleType="fitXY"
                android:src="@drawable/playertwo_level_glowlayout" />
        </RelativeLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/gamePlayModeTv"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_above="@id/backGameTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:background="@drawable/bg_playmode"
        android:gravity="center"
        android:src="@drawable/bg"
        android:alpha="0.8"
        android:text="Play Mode"
        android:textColor="@color/white" />


    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="wrap_content"
        android:layout_above="@id/gamePlayModeTv"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="@dimen/_10sdp"

        >

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/designGrid"
            android:src="@drawable/design_bg_gamelayot"
            android:layout_marginBottom="-15dp"
            />

        <GridView
            android:id="@+id/grid_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:verticalSpacing="@dimen/_5sdp"
            android:paddingTop="@dimen/_20sdp"
            android:listSelector="@android:color/transparent"
            android:paddingBottom="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingLeft="@dimen/_25sdp"
            android:background="@drawable/bg_gamespace_thre"
            android:numColumns="3"
            android:rowCount="3"
            >

        </GridView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/mask_gamespace"
            />
    </LinearLayout>




    <ImageView
        android:id="@+id/canvasLineView"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent" />

<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:visibility="gone"-->
<!--        >-->

<!--        <include layout="@layout/gamespace_six" />-->
<!--    </LinearLayout>-->

    <ImageView
        android:id="@+id/backGameTv"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_above="@id/adLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:src="@drawable/back_game"
        />

    <RelativeLayout
        android:id="@+id/adLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="Space for ads"
            />

        <TextView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@color/red"
            android:text="Ad"
            android:textColor="@color/white"
            android:textSize="@dimen/_5sdp"
            android:gravity="center"
            />
        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/BannerId" />

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/adLayout"
        android:id="@+id/playerwinLayout"
        android:visibility="gone"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.93"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/playerWin_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/player1_win_text"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:textSize="@dimen/_30sdp" />

            <ImageView
                android:id="@+id/playerwin_img_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_280sdp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/x" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/retry_win_iv"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_weight="1"
                    android:src="@drawable/retry_win_img" />

                <ImageView
                    android:id="@+id/home_win_iv"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_weight="1"
                    android:src="@drawable/home_img_win" />

                <ImageView
                    android:id="@+id/goToNextLevel_Iv"
                    android:layout_width="@dimen/_70sdp"
                    android:visibility="gone"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_weight="1"
                    android:src="@drawable/gotonextlevel_img" />

                <ImageView
                    android:id="@+id/watchAdToGoNextlevel"
                    android:layout_width="@dimen/_70sdp"
                    android:visibility="gone"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_weight="1"
                    android:src="@drawable/watch_ad_btn" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:background="@color/black" />


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>